<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_light_gradient">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvReplyingTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang trả lời..."
        android:padding="8dp"
        android:background="#E0E0E0"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone"
        android:layout_above="@id/layout_send_comment"/>

    <LinearLayout
        android:id="@+id/layout_send_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#F3E5F5">

        <EditText
            android:id="@+id/etCommentInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Viết bình luận..."
            android:background="@drawable/bg_album_art_light"
            android:padding="12dp"
            android:maxLines="4"
            android:textColor="#212121"/>

        <ImageButton
            android:id="@+id/btnSendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            app:tint="#8E24AA"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
